<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="5"
    android:gravity="center"
    android:paddingBottom="@dimen/weather_card_padding">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/city"
                android:id="@+id/tvCurLocName"
                android:layout_weight="1"
                android:textIsSelectable="false"
                android:textSize="@dimen/city_name_text_size"
                android:paddingTop="@dimen/text_view_padding"
                android:gravity="bottom|center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/current_date_text_size"
                android:text="Date"
                android:id="@+id/tvDate"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/tvCurLocName"
                android:layout_centerHorizontal="true" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_centerHorizontal="true"
                android:id="@+id/currentTempLayout"
                android:layout_below="@+id/tvDate">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/zero_temperature"
                    android:id="@+id/tvCurTemp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:textSize="@dimen/current_temp_text_size" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/ivWeatherIcon"
                    android:layout_weight="1"
                    android:foregroundGravity="left|fill_vertical"
                    android:scaleType="fitStart" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/weather_description"
                android:id="@+id/tvCurDescription"
                android:layout_weight="1"
                android:gravity="top|center_horizontal"
                android:textSize="@dimen/weather_description_text_size"
                android:layout_below="@+id/currentTempLayout"
                android:paddingBottom="@dimen/text_view_padding" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>




</LinearLayout>