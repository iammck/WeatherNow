<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/weather_card_padding">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/forecast_date_text_size"
            android:paddingTop="@dimen/text_view_padding"
            android:text="Date"
            android:id="@+id/tvDate"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/linearLayout"
                    android:layout_below="@+id/tvForecastAMTime" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/zero_temperature"
                        android:id="@+id/tvForecastAMTemp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:textSize="@dimen/forecast_temp_text_size" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/ivForecastAMIcon"
                        android:layout_weight="1"
                        android:foregroundGravity="left|fill_vertical"
                        android:scaleType="fitStart" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AM"
                    android:id="@+id/tvForecastAMTime"
                    android:layout_weight="1"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/forecast_am_pm_text_size"
                    android:gravity="bottom|center_horizontal"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/weather_description"
                    android:id="@+id/tvForecastAMDesc"
                    android:layout_weight="1"
                    android:gravity="top|center_horizontal"
                    android:textSize="@dimen/weather_description_text_size"
                    android:layout_below="@+id/linearLayout"
                    android:paddingBottom="@dimen/text_view_padding" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/linearLayout2"
                    android:layout_below="@+id/tvForecastPMTime" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/zero_temperature"
                        android:id="@+id/tvForecastPMTemp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:textSize="@dimen/forecast_temp_text_size" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/ivForecastPMIcon"
                        android:layout_weight="1"
                        android:foregroundGravity="left|fill_vertical"
                        android:scaleType="fitStart" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PM"
                    android:id="@+id/tvForecastPMTime"
                    android:layout_weight="1"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/forecast_am_pm_text_size"
                    android:gravity="bottom|center_horizontal"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/weather_description"
                    android:id="@+id/tvForecastPMDesc"
                    android:layout_weight="1"
                    android:gravity="top|center_horizontal"
                    android:textSize="@dimen/weather_description_text_size"
                    android:layout_below="@+id/linearLayout2"
                    android:paddingBottom="@dimen/text_view_padding" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>